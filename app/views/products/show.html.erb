<div class="container" id="showPage">
  <div class="container" id="productShow">
    <div class="row">
      <div class="col-md-4">
        <p id="notice"><%= notice %></p>

        <p>
          <strong>Name:</strong>
          <%= @product.name %>
        </p>

        <p>
          <strong>Description:</strong>
          <%= @product.description %>
        </p>

        <p>
          <strong>Image URL:</strong>
          <%= @product.image_url %>
        </p>

        <p>
          <strong>Colour:</strong>
          <%= @product.colour %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= @product.price %>
        </p>

        <%= form_with(url: '/payments/create') do |form| %>
          <%= render partial: "shared/stripe_checkout_button" %>
          <%= hidden_field_tag(:product_id, @product.id) %>
        <% end %>

        <%= link_to 'Edit', edit_product_path(@product) %> 
        <%= link_to 'Back', products_path %>

        <div class="container" id="commentArea">
          <div class="container">
            <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
            <%= @product.highest_rating_comment %>
          </div>
          <div class="container">
            <%= render 'new_comment' %>
            <%= render 'comments' %>
            <%= will_paginate @comments %>
          </div>
        </div>
        
      </div><!--col div-->
    </div><!--row div-->
  </div><!--main div-->
</div>
